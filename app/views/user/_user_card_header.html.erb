<div class="card-header d-flex align-items-center bg-light border-0" style="padding: 1rem;">
  <%= image_tag(user.avatar, class: "rounded-circle me-3", style: "width: 60px; height: 60px; object-fit: cover;") %>

  <div class="flex-grow-1">
    <h5 class="mb-1" style="word-break: break-word; font-size: 1.1rem;">
      <%= link_to user.name, user == current_user ? user_profile_path : user_user_path(user), class: "text-dark text-decoration-none fw-semibold" %>
    </h5>

    <small class="text-muted">
      Seguidores:
      <span class="badge bg-info text-dark me-2"><%= user.followers.count %></span>
      Seguindo:
      <span class="badge bg-info text-dark"><%= user.following.count %></span>
    </small>
  </div>
</div>

